<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<div xmlns:jsp="http://java.sun.com/JSP/Page"
     xmlns:c="http://java.sun.com/jsp/jstl/core"
     xmlns:spring="http://www.springframework.org/tags"
     xmlns:form="http://www.springframework.org/tags/form"
     version="2.0">
    <jsp:directive.page contentType="text/html;charset=UTF-8"/>
    <jsp:directive.page isELIgnored="false"/>
    <jsp:output omit-xml-declaration="yes"/>
    <spring:message code="category.descriptionHeader" var="descriptionHeader"/>
    <spring:message code="category.parentHeader" var="parentHeader"/>
    <spring:message code="category.bookmarkListHeader" var="bookmarkListHeader"/>
    <spring:message code="common.bookmarkIconTH" var="bookmarkIconTH"/>
    <spring:message code="common.bookmarkNameTH" var="bookmarkNameTH"/>
    <spring:message code="common.bookmarkUrlTH" var="bookmarkUrlTH"/>
    <spring:message code="common.bookmarkShowTH" var="bookmarkShowTH"/>

    <spring:url value="/bookmarks/bookmark/viewer?bookmarkId=" var="showBookmarkUrl"/>
    <spring:url value="/bookmarks/create/" var="createBookmarkUrl"/>
    <spring:url value="/bookmarks/delete/" var="deleteBookmarkUrl"/>
    <spring:url value="/bookmarks/deleteAll" var="deleteAllBookmarksUrl"/>
    <spring:url value="/bookmarks/edit/" var="editBookmarkUrl"/>
    <spring:url value="/categories/category/editor?categoryId=" var="categoryEditorUrl"/>

    <div id="categoryInfo">
        <form:form modelAttribute="category" id="categoryInfoForm" method="get">
            <table border="1" width="90%">
                <tr>
                    <td>
                        <form:label path="name">
                            <h2>${category.name}</h2>
                        </form:label>
                        <td></td>
                        <td>
                            <!--todo:image-->
                            <a href="${categoryEditorUrl}${category.id}">${categoryEditorUrl}${category.id}</a>
                        </td>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <form:label path="description">
                            ${descriptionHeader}
                        </form:label>
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td>
                        <form:textarea path="description" cols="30" rows="5" id="bookmarkDescription"/>
                    </td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td>
                        <form:label path="parent">
                            ${parentHeader}
                        </form:label>
                    </td>
                    <td>
                        <form:label path="parent">
                            <!--todo: calculate with EL-->
                            ${category.parent}
                        </form:label>
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <form:label path="bookmarks">
                            ${bookmarkListHeader}
                        </form:label>
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td>
                        <c:if test="${not empty category.bookmarks}">
                            <tаble border="1" width="90%">
                                <thead>
                                <tr>
                                    <th>${bookmarkIconTH}</th>
                                    <th>${bookmarkNameTH}</th>
                                    <th>${bookmarkUrlTH}</th>
                                    <th>${bookmarkShowTH}</th>
                                </tr>
                                </thead>
                                <tbody>
                                <c:forEach items="${category.bookmarks}" var="bookmark">
                                    <tr>
                                        <td>
                                            <!--todo:output icon-->
                                            ${bookmark.icon}
                                        </td>
                                        <td>
                                            ${bookmark.name}
                                        </td>
                                        <td>
                                            ${bookmark.url}
                                        </td>
                                        <td>
                                            <!--todo:image-->
                                            <a href="${showBookmarkUrl}${bookmark.id}">${showBookmarkUrl}${bookmark.id}</a>
                                        </td>
                                    </tr>
                                </c:forEach>
                                </tbody>
                            </tаble>
                        </c:if>
                    </td>
                    <td></td>
                    <td></td>
                </tr>
            </table>
        </form:form>
    </div>
</div>